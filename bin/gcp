#!/bin/zsh

if [ $# -eq 0 ]; then
    echo "Error: No file name provided."
    exit 1
fi

file_name=$1

# Check if the file exists
if [ -f "$file_name" ]; then
    echo "Compiling and running $file_name"
    g++ -std=c++11 -O2 -Wall "$file_name" -o "${file_name%.cpp}"
    if [ $? -eq 0 ]; then
        "./${file_name%.cpp}"
    else
        echo "Compilation failed."
    fi
else
    echo "Error: File not found."
fi

